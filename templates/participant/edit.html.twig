{% extends 'base.html.twig' %}

{% block title %}
    Create a wish
{% endblock %}

{% block body %}
        <div class="flex flex-col items-center px-6 py-8 overflow-auto lg:py-0">
            <div class="w-full bg-white rounded-lg shadow md:mt-0 sm:max-w-md xl:p-0">
                <div class="p-6 space-y-4 md:space-y-6 sm:p-8">
                    <a href="{{ path('participant_show', {id: app.user.id}) }}"><i class="fa-solid fa-reply"></i> <span class="underline text-md">retour</span></a>

                    <h1 class="text-xl mt-2">Modifier mon profil</h1>
                    {{ form_start(form, {'action': path('participant_edit', {id: app.user.id}), 'method': 'POST', attr: {'novalidate': 'novalidate', 'class': 'space-y-4 md:space-y-6'}}) }}
                    <div class="text-red-500 mt-2">
                    {{ form_errors(form.username, ) }}
                    {{ form_errors(form.prenom) }}
                    {{ form_errors(form.nom) }}
                    {{ form_errors(form.telephone) }}
                    {{ form_errors(form.email) }}
                    {{ form_errors(form.password) }}
                    {{ form_errors(form.confirm) }}
                    </div>

                    <div>
                        <label for="{{ form.username.vars.id }}" class="block mb-2 text-sm font-medium text-gray-900'">Pseudo</label>
                        {{ form_widget(form.username, {'attr': {'class': 'bg-gray-50 border border-gray-300 text-gray-900 rounded-lg focus:ring-primary-600 focus:border-primary-600 block w-full p-2.5 '}}) }}

                    </div>
                    <div>
                        <label for="{{ form.prenom.vars.id }}" class="block mb-2 text-sm font-medium text-gray-900'">Pr√©nom</label>
                        {{ form_widget(form.prenom, {'attr': {'class': 'bg-gray-50 border border-gray-300 text-gray-900 rounded-lg focus:ring-primary-600 focus:border-primary-600 block w-full p-2.5 '}}) }}
                    </div>
                    <div>
                        <label for="{{ form.nom.vars.id }}" class="block mb-2 text-sm font-medium text-gray-900'">Nom</label>
                        {{ form_widget(form.nom, {'attr': {'class': 'bg-gray-50 border border-gray-300 text-gray-900 rounded-lg focus:ring-primary-600 focus:border-primary-600 block w-full p-2.5 '}}) }}

                    </div>
                    <div>
                        <label for="{{ form.telephone.vars.id }}" class="block mb-2 text-sm font-medium text-gray-900'">Telephone</label>
                        {{ form_widget(form.telephone, {'attr': {'class': 'bg-gray-50 border border-gray-300 text-gray-900 rounded-lg focus:ring-primary-600 focus:border-primary-600 block w-full p-2.5 '}}) }}

                    </div>
                    <div>
                        <label for="{{ form.email.vars.id }}" class="block mb-2 text-sm font-medium text-gray-900'">Email</label>
                        {{ form_widget(form.email, {'attr': {'class': 'bg-gray-50 border border-gray-300 text-gray-900 rounded-lg focus:ring-primary-600 focus:border-primary-600 block w-full p-2.5 '}}) }}

                    </div>
                    <div>
                        <label for="{{ form.password.vars.id }}" class="block mb-2 text-sm font-medium text-gray-900'">Mot de passe</label>
                        {{ form_widget(form.password, {'attr': {'class': 'bg-gray-50 border border-gray-300 text-gray-900 rounded-lg focus:ring-primary-600 focus:border-primary-600 block w-full p-2.5 '}}) }}

                    </div>
                    <div>
                        <label for="{{ form.confirm.vars.id }}" class="block mb-2 text-sm font-medium text-gray-900'">Confirmer</label>
                        {{ form_widget(form.confirm, {'attr': {'class': 'bg-gray-50 border border-gray-300 text-gray-900 rounded-lg focus:ring-primary-600 focus:border-primary-600 block w-full p-2.5 '}}) }}
                    </div>


                    <button type="submit" class="w-full text-white bg-blue-600 hover:bg-primary-700 focus:ring-4 focus:outline-none focus:ring-primary-300 font-medium rounded-lg text-sm px-5 py-2.5 text-center">modifier</button>
                    {{ form_end(form) }}
                </div>
            </div>
        </div>
    </div>

{% endblock %}

